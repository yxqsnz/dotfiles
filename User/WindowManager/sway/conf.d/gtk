# vi: ft=swayconfig
set $gnome-schema org.gnome.desktop.interface
set $cursor Bibata-Modern-Classic
seat seat0 xcursor_theme $cursor 

exec_always {
    gsettings set $gnome-schema gtk-theme 'Materia-dark-compact'
    gsettings set $gnome-schema icon-theme 'Papirus-Dark'
    gsettings set $gnome-schema cursor-theme $cursor
    gsettings set $gnome-schema font-name 'IBM Plex Sans'
}

exec --no-startup-id /usr/libexec/gsd-xsettings 
