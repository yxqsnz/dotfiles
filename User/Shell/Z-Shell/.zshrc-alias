if test -f ~/.local/bin/lvim; then
  alias vim="lvim"
  alias nvim="lvim"
  alias vi="lvim"
else
  alias vim="nvim"
  alias vi="nvim"
fi

alias py="python3"
alias pls="sudo "
alias cl="clear"
alias ls="ls --color=always"
alias l="ls -lAh"
alias la="ls -lah"
alias ll="ls -lh"
alias rm="rm -i"
alias mv="mv -i"
alias cp="cp -i"
alias :q="exit"
alias gp="git push"
alias record="ffmpeg -init_hw_device vaapi=foo:/dev/dri/renderD128 -hwaccel vaapi -hwaccel_device foo -f x11grab -r 60 -i :0.0 -video_size 1366x728"
